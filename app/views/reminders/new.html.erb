<h1>New Reminder</h1>

<%= form_with(model: @reminder, url: reminders_path, method: :post, data: { turbo: false }) do |form| %>

  <div class="form-group">
    <%= form.label :title, class: "font-weight-bold" %>
    <%= form.text_field :title, class: "form-control" %>
    <% if @reminder.errors.has_key?(:title) %>
      <p class="text-danger"><%= @reminder.errors[:title].first %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "font-weight-bold" %>
    <%= form.text_area :description, class: "form-control" %>
    <% if @reminder.errors.has_key?(:description) %>
      <p class="text-danger"><%= @reminder.errors[:description].first %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :date, class: "font-weight-bold" %>
    <%= form.date_field :date, class: "form-control" %>
    <% if @reminder.errors.has_key?(:date) %>
      <p class="text-danger"><%= @reminder.errors[:date].first %></p>
    <% end %>
  </div>


<div style="display:flex; justify-content:center;align-items:center;margin-top:15px;">
  <%= form.submit "Create Reminder" %>
</div>
<% end %>